<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>package</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/shell/bin</directory>
			<outputDirectory>bin</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/shell/onlineconf</directory>
			<outputDirectory>conf</outputDirectory>
			<excludes>
				<exclude>*.properties</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>src/main/online-resources</directory>
			<includes>
				<include>*.properties</include>
			</includes>
			<outputDirectory>conf</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>src/main/shell/lib</directory>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
		<!-- keep beidou-cron.jar without version in file name -->
		<fileSet>
			<directory>target</directory>
			<includes>
				<include>beidou-cron.jar</include>
			</includes>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
	</fileSets>
	<dependencySets>
		<dependencySet>
			<scope>compile</scope>
			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
		<dependencySet>
			<scope>provided</scope>
			<outputDirectory>lib</outputDirectory>
			<useProjectArtifact>false</useProjectArtifact>
		</dependencySet>
	</dependencySets>
</assembly>